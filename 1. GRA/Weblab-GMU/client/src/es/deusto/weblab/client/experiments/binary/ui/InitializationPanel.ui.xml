<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="i18n" type="es.deusto.weblab.client.i18n.IWebLabI18N" />
	
	<g:VerticalPanel width="100%" horizontalAlignment="CENTER" spacing="10">
	
		<g:Label>Welcome to the binary laboratory! Choose one option:</g:Label>
		
		<g:VerticalPanel>
			<g:RadioButton ui:field="optionBCD"   name="game" checked="true" text="{i18n.pureBCD}"/>
			<g:RadioButton ui:field="optionOther" name="game" text="{i18n.otherBCDs}"/>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 